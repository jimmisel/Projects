@model PetAdoption1_5_15.Models.PetsIndexView
@{
    ViewBag.Title = "Home Page";
}

<table class="table-bordered table-striped">
    <tr>
        <th>Age</th>
        <th>Name</th>
        <th>Type</th>
    </tr>


    @foreach (var p in Model.Pets.OrderBy(t => t.Age))
    {
        <tr>
            <td>@p.Age</td>
            <td>@p.Name</td>
            <td>@p.Type</td>

        </tr>
    }
</table>